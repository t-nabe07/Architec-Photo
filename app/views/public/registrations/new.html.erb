<div class="container">
  <div class="row">
    <div class="col-lg-12 col-sm-12 col-md-12">
      <h1 class="subtitle">Sign Up</h1>
      <p><%= flash[:notice] %></p>
      <div class="container">
        <p>ユーザー情報を入力してください</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    　　　　<%= render "public/shared/error_messages", resource: resource %>

    　　  　<div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :"姓" %>
              <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "姓" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :"名" %>
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "名" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :"セイ" %>
              <%= f.text_field :last_name_kana, autofocus: true, class: "form-control", placeholder: "セイ" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :"メイ" %>
              <%= f.text_field :first_name_kana, autofocus: true, class: "form-control mr-2", placeholder: "メイ" %>
            </div>

            <div class="col-md-12 mb-3">
              <%= f.label :"大学名称" %>
              <%= f.text_field :college_name, autofocus: true, class: "form-control", placeholder: "正式名称で入力してください" %>
            </div>

            <div class="col-md-12 mb-3">
              <%= f.label :"専攻科目" %>
              <%= f.text_field :specialty_study, autofocus: true, class: "form-control", placeholder: "正式名称で入力してください" %>
            </div>

            <div class="col-md-12 mb-3">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "メールアドレス" %>
            </div>

            <div class="col-md-12 mb-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "パスワード(6文字以上)" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-12 mb-3">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "パスワード(確認用)" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-border" %>
          </div>
        <% end %>

        <div class="form-comments text-right">
          <span>既に登録済みの方は</span>
          <span><%= render "public/shared/links" %>からログインしてください。</span>
        </div>

        <br>
        <br>
        <br>
        a
      </div>
    </div>
  </div>
</div>