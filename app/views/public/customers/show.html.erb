    <%= image_tag @customer.plofile_image.variant( resize: '300x300') %>
    <%#= image_tag image.representation(resize_to_limit: [300,300]) %>
  <% else %>
    <%= link_to rails_blob_path(plofile_image, disposition: "attachment") do %>
      <%= image_tag "no_image.jpg", alt: "Download file" %>
    <% end %>
  <% end %>
