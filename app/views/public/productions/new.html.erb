<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title my-3">新規投稿</h5>
          <%= render "layouts/error" %>
          <%= form_with model: @production,url:'/productions',local:true do |f| %>
            <div class="form-group">
              <div class="card-text">
                <%= f.label :"作品タイトル" %>
                <%= f.text_field :title, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="card-text">
                <%= f.label :"作品説明" %>
                <%= f.text_area :introduction, size: '60%x5%', class: "form-control form" %>
              </div>
            </div>
            <div class="form-group">
              <div class="card-text my-4">
                <%= f.label :"画像を選択してください（複数投稿の場合1枚目がサムネ表示されます。PDFは表示されません）" %><br>
                <%= f.file_field :images, multiple: true %>
              </div>
            </div>
            <div class="col-3 mx-auto">
              <%= f.submit 'create', class: "btn btn-border" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>