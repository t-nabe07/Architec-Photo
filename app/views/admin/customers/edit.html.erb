<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="subtitle"><%= @customer.full_name %>さんの編集</h2>
          <%= form_with model:@customer, url: admin_customer_path, local: true do |f| %>
            <div class="form-group">
              <div class="card-text">
                <%= f.label :"名前", class:"col-sm-3 form-label" %>
                <%= f.label :"(姓)", class:"col-sm-1 form-label" %>
                <%= f.text_field :last_name, autofocus: true, class:"col-sm-3" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <h3 class="bg-ligth my-3 px-4"><%= @customer.full_name %>さんの編集</h3>
  <%= form_with model:@customer, url: admin_customer_path, local: true do |f| %>
  <div class="field form-group col-xs-12">
    <%= f.label :"名前", class:"col-sm-3 form-label" %>
    <%= f.label :"(姓)", class:"col-sm-1 form-label" %>
    <%= f.text_field :last_name, autofocus: true, class:"col-sm-3" %>
    <%= f.label :"(名)", class:"col-sm-1 form-label" %>
    <%= f.text_field :first_name, class:"col-sm-3" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"カナ", class:"col-sm-3 form-label" %>
    <%= f.label :"セイ", class:"col-sm-1 form-label" %>
    <%= f.text_field :last_name_kana, class:"col-sm-3" %>
    <%= f.label :"メイ", class:"col-sm-1 form-label" %>
    <%= f.text_field :first_name_kana, class:"col-sm-3" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"自己紹介", class:"col-lg-4 col-sm-4 form-label" %>
    <%= f.text_area :introduction, class:"col-lg-7 col-sm-3" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"大学名称", class:"col-sm-4 form-label" %>
    <%= f.text_field :college_name, class:"col-lg-7 col-sm-3" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"専攻", class:"col-sm-4 form-label" %>
    <%= f.text_field :specialty_study, class:"col-lg-7 col-sm-3" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"メール", class:"col-sm-4 form-label" %>
    <%= f.text_field :email, class:"col-lg-7 col-sm-3" %>
  </div>

  <div class="form-group">
    <%= f.label :ステータス %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会", value: :true %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "会員", value: :false %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存", class:"btn-success" %>
  </div>

  <% end %>
</div>