<div class="container">
  <div class="row">
    <h3 class="bg-ligth my-3 px-4"><%= @customer.full_name %>さんの投稿一覧</h3>
    <table class="table table-hover table-inverse mx-5">
      <thead class="thead-light">
        <tr>
          <th>day</th>
          <th>image</th>
          <th>title</th>
          <th>introduction</th>
        </tr>
      </thead>
      <tbody>
        <% @customer.productions.each do |production| %>
          <tr>
            <td><%= production.created_at.strftime("%Y年%m月%d日%H時%M分%S秒 ") %></td>
            <td></td>
            <td><%= production.title%></td>
            <td><%= production.introduction %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>